{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost",
    "ServiceDiscoveryProvider": {
      "Type": "AppConfiguration",
      "PollingIntervalSeconds": 10000
    }
  },
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/account-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "account",
      "ServiceName": "account"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/game-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "game",
      "ServiceName": "game"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/order-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "order",
      "ServiceName": "order"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/payment-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "payment",
      "ServiceName": "payment"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/rate-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "rate",
      "ServiceName": "rate"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "UpstreamPathTemplate": "/recommendation-api/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "recommendation",
      "ServiceName": "recommendation"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "account",
      "Config": [
        {
          "Name": "Account API",
          "Version": "v1",
          "Service": {
            "Name": "account",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "game",
      "Config": [
        {
          "Name": "Game API",
          "Version": "v1",
          "Service": {
            "Name": "game",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "order",
      "Config": [
        {
          "Name": "Order API",
          "Version": "v1",
          "Service": {
            "Name": "order",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "payment",
      "Config": [
        {
          "Name": "Payment API",
          "Version": "v1",
          "Service": {
            "Name": "payment",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "rate",
      "Config": [
        {
          "Name": "Rate API",
          "Version": "v1",
          "Service": {
            "Name": "rate",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    },
    {
      "Key": "recommendation",
      "Config": [
        {
          "Name": "Recommendation API",
          "Version": "v1",
          "Service": {
            "Name": "recommendation",
            "Path": "/swagger/v1/swagger.json"
          }
        }
      ]
    }
  ]
}